<% include ../partials/header%>

<div class="container">
    <div class="row">
        <h1 style="text-align:center">Edit <%=ngo.name%></h1>
        <div style="width:30% ;margin:25px auto">
            <form action="/ngo/<%=ngo._id%>?_method=PUT" method="POST">
            
            
                <div class="form-group">
                    <input class="form-control" type="text" name="name" value="<%=ngo.name%>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="image" value="<%=ngo.image%>">
                </div>
                 <div class="form-group">
                    <input class="form-control" type="text" name="ngoLink" value="<%=ngo.ngoLink%>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="cause" value="<%=ngo.cause%>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="tel" name="contact" value="<%=ngo.contact%>">
                </div>
                <div class="form-group">
                    <textarea class="form-control" type="text" name="address" rows=5><%=ngo.address%></textarea>
                </div>
                <div class="form-group">
                    <textarea class="form-control" type="text" name="description" rows=8><%=ngo.description%></textarea>
                </div>
                <div class="form-group">
                   <button class="btn btn-lg btn-primary btn-block">Submit</button> 
                </div>
            
            
            </form>   
        </div>
            
    </div>
    
</div>


<div style="text-align:center">
    <a href="/">Go back</a>
</div>


<% include ../partials/footer%>